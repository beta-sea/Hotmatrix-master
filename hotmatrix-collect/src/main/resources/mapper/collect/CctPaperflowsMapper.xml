<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.benet.collect.mapper.CctPaperflowsMapper">

    <resultMap type="CctPaperflows" id="CctPaperflowsResult">
        <result property="id" column="id"/>
        <result property="pflowNo" column="pflow_no"/>
        <result property="paperNo" column="paper_no"/>
        <result property="ruserNo" column="ruser_no"/>
        <result property="questNo" column="quest_no"/>
        <result property="optNo" column="opt_no"/>
        <result property="optScore" column="opt_score"/>
        <result property="startTime" column="start_time"/>
        <result property="enditTime" column="endit_time"/>
        <result property="checkState" column="check_state"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleteFlag" column="delete_flag"/>
        <result property="comments" column="comments"/>
        <result property="appCode" column="app_code"/>
        <result property="version" column="version"/>
    </resultMap>

    <sql id="selectCctPaperflowsVo">
        select id, pflow_no, paper_no, ruser_no, quest_no, opt_no, opt_score, start_time, endit_time, check_state, create_by, create_time, update_by, update_time, delete_flag, comments, app_code, version from cct_paperflows
    </sql>

    <select id="getAllRecords" resultMap="CctPaperflowsResult">
        <include refid="selectCctPaperflowsVo"/>
        where delete_flag='1' and app_code=#{appCode}
    </select>

    <select id="getRecordsByClassNo" resultMap="CctPaperflowsResult">
        <include refid="selectCctPaperflowsVo"/>
        where delete_flag='1' and app_code=#{appCode} and paper_no=#{classNo}
    </select>

    <select id="getRecordsByPaging" resultMap="CctPaperflowsResult">
        <include refid="selectCctPaperflowsVo"/>
        where delete_flag='1' and app_code=${appCode}
        <if test="model.condition != null  and model.condition != ''">and ${model.condition}</if>
        order by ${model.orderField} ${model.orderType} limit ${model.pageIndex},${model.pageSize}
    </select>

    <select id="getRecordByNo" resultMap="CctPaperflowsResult">
        <include refid="selectCctPaperflowsVo"/>
        where delete_flag='1' and app_code=#{appCode} and pflow_no = #{no}
    </select>

    <select id="getRecordNameByNo" resultType="String">
        select paper_no from cct_paperflows
        where delete_flag='1' and app_code=#{appCode} and pflow_no = #{no}
    </select>

    <select id="getCountByCondition" resultType="Integer">
        select count(*) from cct_paperflows
        where delete_flag='1' and app_code=#{appCode}
        <if test="condition != null  and condition != ''">and ${condition}</if>
    </select>

    <insert id="AddNewRecord" parameterType="CctPaperflows" useGeneratedKeys="true" keyProperty="id">
        insert into cct_paperflows (
        <if test="info.pflowNo != null  and info.pflowNo != ''">pflow_no,</if>
        <if test="info.paperNo != null  and info.paperNo != ''">paper_no,</if>
        <if test="info.ruserNo != null  and info.ruserNo != ''">ruser_no,</if>
        <if test="info.questNo != null  and info.questNo != ''">quest_no,</if>
        <if test="info.optNo != null  and info.optNo != ''">opt_no,</if>
        <if test="info.optScore != null ">opt_score,</if>
        <if test="info.startTime != null ">start_time,</if>
        <if test="info.enditTime != null ">endit_time,</if>
        <if test="info.checkState != null  and info.checkState != ''">check_state,</if>
        <if test="info.createBy != null  and info.createBy != ''">create_by,</if>
        <if test="info.createTime != null ">create_time,</if>
        <if test="info.updateBy != null  and info.updateBy != ''">update_by,</if>
        <if test="info.updateTime != null ">update_time,</if>
        <if test="info.deleteFlag != null  and info.deleteFlag != ''">delete_flag,</if>
        <if test="info.comments != null  and info.comments != ''">comments,</if>
        <if test="info.appCode != null  and info.appCode != ''">app_code,</if>
        <if test="info.version != null ">version</if>
        )values(
        <if test="info.pflowNo != null  and info.pflowNo != ''">#{info.pflowNo},</if>
        <if test="info.paperNo != null  and info.paperNo != ''">#{info.paperNo},</if>
        <if test="info.ruserNo != null  and info.ruserNo != ''">#{info.ruserNo},</if>
        <if test="info.questNo != null  and info.questNo != ''">#{info.questNo},</if>
        <if test="info.optNo != null  and info.optNo != ''">#{info.optNo},</if>
        <if test="info.optScore != null ">#{info.optScore},</if>
        <if test="info.startTime != null ">#{info.startTime},</if>
        <if test="info.enditTime != null ">#{info.enditTime},</if>
        <if test="info.checkState != null  and info.checkState != ''">#{info.checkState},</if>
        <if test="info.createBy != null  and info.createBy != ''">#{info.createBy},</if>
        <if test="info.createTime != null ">#{info.createTime},</if>
        <if test="info.updateBy != null  and info.updateBy != ''">#{info.updateBy},</if>
        <if test="info.updateTime != null ">#{info.updateTime},</if>
        <if test="info.deleteFlag != null  and info.deleteFlag != ''">#{info.deleteFlag},</if>
        <if test="info.comments != null  and info.comments != ''">#{info.comments},</if>
        <if test="info.appCode != null  and info.appCode != ''">#{info.appCode},</if>
        <if test="info.version != null ">#{info.version}</if>
        )
    </insert>

    <update id="UpdateRecord" parameterType="CctPaperflows">
        update cct_paperflows
        <set>
            <if test="info.pflowNo != null  and info.pflowNo != ''">pflow_no = #{info.pflowNo},</if>
            <if test="info.paperNo != null  and info.paperNo != ''">paper_no = #{info.paperNo},</if>
            <if test="info.ruserNo != null  and info.ruserNo != ''">ruser_no = #{info.ruserNo},</if>
            <if test="info.questNo != null  and info.questNo != ''">quest_no = #{info.questNo},</if>
            <if test="info.optNo != null  and info.optNo != ''">opt_no = #{info.optNo},</if>
            <if test="info.optScore != null ">opt_score = #{info.optScore},</if>
            <if test="info.startTime != null ">start_time = #{info.startTime},</if>
            <if test="info.enditTime != null ">endit_time = #{info.enditTime},</if>
            <if test="info.checkState != null  and info.checkState != ''">check_state = #{info.checkState},</if>
            <if test="info.createBy != null  and info.createBy != ''">create_by = #{info.createBy},</if>
            <if test="info.createTime != null ">create_time = #{info.createTime},</if>
            <if test="info.updateBy != null  and info.updateBy != ''">update_by = #{info.updateBy},</if>
            <if test="info.updateTime != null ">update_time = #{info.updateTime},</if>
            <if test="info.deleteFlag != null  and info.deleteFlag != ''">delete_flag = #{info.deleteFlag},</if>
            <if test="info.comments != null  and info.comments != ''">comments = #{info.comments},</if>
            <if test="info.appCode != null  and info.appCode != ''">app_code = #{info.appCode},</if>
            <if test="info.version != null ">version = #{info.version}</if>
        </set>
        where delete_flag='1' and app_code=#{info.appCode} and version=#{info.version} and pflow_no =
        #{info.pflowNo}
    </update>

    <delete id="HardDeleteByNo">
        delete from cct_paperflows
        where delete_flag='1' and app_code=#{appCode} and pflow_no = #{no}
    </delete>

    <delete id="HardDeleteByNos">
        delete from cct_paperflows
        where delete_flag='1' and app_code=#{appCode} and pflow_no in
        <foreach item="no" collection="nos" open="(" separator="," close=")">
            #{no}
        </foreach>
    </delete>

    <delete id="HardDeleteByCondition">
        delete from cct_paperflows
        where delete_flag='1' and app_code=#{appCode}
        <if test="condition != null  and condition != ''">and ${condition}</if>
    </delete>

    <delete id="SoftDeleteByNo">
        update cct_paperflows set delete_flag='0'
        where delete_flag='1' and app_code=#{appCode} and pflow_no = #{no}
    </delete>

    <delete id="SoftDeleteByNos">
        update cct_paperflows set delete_flag='0'
        where delete_flag='1' and app_code=#{appCode} and pflow_no in
        <foreach item="no" collection="nos" open="(" separator="," close=")">
            #{no}
        </foreach>
    </delete>

    <delete id="SoftDeleteByCondition">
        update cct_paperflows set delete_flag='0'
        where delete_flag='1' and app_code=#{appCode}
        <if test="condition != null  and condition != ''">and ${condition}</if>
    </delete>

</mapper>